-- Create a Dealership Database

CREATE TABLE KaysMovement (Sold INTEGER PRIMARY KEY, Cars TEXT, Price INTEGER);
INSERT INTO KaysMovement Values (223, "BMW", 30000);
INSERT INTO KaysMovement Values (124, "Subaru",50000);
