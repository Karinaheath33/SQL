--Display the Average price of cars on the Lot

SELECT AVG (price) from kaysmovement;

--Display the car that sold the most

SELECT MAX (sold) FROM Kaysmovement;

--What are the top five cars sold

SELECT sold, cars, price FROM kaysmovement ORDER BY sold DESC limit 5;
